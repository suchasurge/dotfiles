# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# rails
alias tlog='tail -f log/development.log'
alias migrate='rake db:migrate db:test:clone'
alias rst='touch tmp/restart.txt'
alias grep='grep --color=auto'

# commands starting with % for pasting from web
alias %=' '

# Ubi stuff...
alias ubi_four='ssh root@four.ubilabs.net'
alias ci_server='ssh joe@192.168.1.108'

# Private stuff
alias eulando_server='ssh root@50.22.248.35'

alias elasticsearch_start='elasticsearch -f -D es.config=$HOME/Developer/Cellar/elasticsearch/0.18.5/config/elasticsearch.yml'
alias mongodb_start="mongod run --config $HOME/Developer/Cellar/mongodb/2.0.1-x86_64/mongod.conf"
alias postgres_start="pg_ctl -D $HOME/Developer/var/postgres -l $HOME/Developer/var/postgres/server.log start"
alias postgres_stop="pg_ctl -D $HOME/Developer/var/postgres stop -s -m fast"

# use mac_vim terminal app
alias vim='~/Developer/Cellar/macvim/7.3-61/MacVim.app/Contents/MacOS/Vim'

# open specific pow app log
powlog() { less ~/Library/Logs/Pow/apps/$1.log }
# open pow access.log
alias powaccess='less ~/Library/Logs/Pow/access.log'
